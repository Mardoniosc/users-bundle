{% extends "::base.html.twig" %}

{% form_theme form _self %}

{% block body %}
    <h1>
        <i class="fa fa-users" aria-hidden="true"></i>
        {% trans %}Usuários{% endtrans %}
        <small>
            {% trans %}Gerencie os usuários da unidade atual{% endtrans %}
        </small>
    </h1>
        
    {{ form_start(form) }}

        {% include 'MangatiBaseBundle:Crud:flashMessages.html.twig' %}

        <div class="row">
            <div class="col-md-5">
                <fieldset>
                    <legend>{% trans %}Geral{% endtrans %}</legend>

                    <p class="info">{% trans %}Dados básico do usuário.{% endtrans %}</p>

                    {{ form_row(form.login) }}

                    {{ form_row(form.nome) }}

                    {{ form_row(form.sobrenome) }}

                    {% if entity.id %}
                        {{ form_row(form.status) }}
                    {% endif %}

                    {% if not entity.id %}
                        {{ form_row(form.senha) }}

                        {{ form_row(form.confirmacaoSenha) }}
                    {% endif %}
                </fieldset>
            </div>
            <div class="col-md-7">
                <fieldset>
                    <legend>{% trans %}Lotações{% endtrans %}</legend>

                    <p class="info">{% trans %}Lotação é utilizada para definir o papel e acesso do usuário às unidades.{% endtrans %}</p>

                    {% if form.lotacoes is defined %}
                        {{  form_widget(form.lotacoes) }}
                    {% else %}
                        <table id="lotacoes-view" class="table vue-users">
                            <thead>
                                <tr>
                                    <th>
                                        {% trans %}Unidade{% endtrans %}
                                    </th>
                                    <th>
                                        {% trans %}Cargo{% endtrans %}
                                    </th>
                                    <th>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for lotacao in entity.lotacoes %}
                                    <tr>
                                        <td>
                                            {{ lotacao.unidade }}
                                        </td>
                                        <td>
                                            {{ lotacao.cargo }}
                                        </td>
                                        <td>
                                            <button type="button" title="{% trans %}Visualizar permissões{% endtrans %}" class="btn btn-default btn-view-cargo" data-id="{{ lotacao.cargo.id }}">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}

                </fieldset>
            </div>
        </div>

        <div class="buttons">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-save"></span> 
                {% trans %}Salvar{% endtrans %}
            </button>
            <a href="{{ path('novosga_users_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-chevron-left"></span> 
                {% trans %}Voltar{% endtrans %}
            </a>
        </div>

    {{ form_end(form) }}


    {# permissoes #}
    <div id="dialog-cargo" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{% trans %}Cargo{% endtrans %}</h4>
                </div>
                <div class="modal-body" v-if="cargo">
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                {% trans %}Nome{% endtrans %}
                            </th>
                            <td>
                                {% verbatim %}
                                    {{cargo.nome}}
                                {% endverbatim %}
                            </td>
                        </tr>
                        <tr>
                            <th>
                                {% trans %}Descrição{% endtrans %}
                            </th>
                            <td>
                                {% verbatim %}
                                    {{cargo.descricao}}
                                {% endverbatim %}
                            </td>
                        </tr>
                        <tr>
                            <th>
                                {% trans %}Permissões{% endtrans %}
                            </th>
                            <td>
                                {% verbatim %}
                                    <ul>
                                        <li v-for="modulo in cargo.modulos">
                                            {{modulo}}
                                        </li>
                                    </ul>
                                {% endverbatim %}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {# dialog mudar senha apenas para usuarios ja cadastrados #}
    {% if entity.id > 0 %}
        <div id="dialog-senha" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">{% trans %}Alterar senha{% endtrans %}</h4>
                    </div>
                    <div class="modal-body">
                        <input id="senha_id" type="hidden" value="{{ entity.id }}" />
                        <div class="form-group required">
                            <label for="senha_senha">{% trans %}Senha{% endtrans %}</label>
                            <input id="senha_senha" type="password" class="form-control" />
                        </div>
                        <div class="form-group required">
                            <label for="senha_confirmacao">{% trans %}Confirmar senha{% endtrans %}</label>
                            <input id="senha_confirmacao" type="password" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" onclick="App.Usuarios.alterarSenha()">{% trans %}Alterar{% endtrans %}</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/mangatibase/js/symfony-collection.js') }}"></script>
    <script src="{{ asset('bundles/novosgausers/js/script.js') }}"></script>
{% endblock %}

{% block _usuario_lotacoes_entry_widget %}
    <tr>
        <td>
            {{ form_row(form.unidade, { label: false }) }}
        </td>
        <td>
            {{ form_row(form.cargo, { label: false, attr: { class: 'cargo' } }) }}
        </td>
        <td>
            <button type="button" title="{% trans %}Visualizar permissões{% endtrans %}" class="btn btn-default btn-view-cargo">
                <i class="fa fa-eye"></i>
            </button>
                
            <button type="button" title="{% trans %}Remover{% endtrans %}" class="btn btn-danger btn-remove">
                <i class="fa fa-remove"></i>
            </button>
        </td>
    </tr>
{% endblock %}

{% block _usuario_lotacoes_widget %}
    <table id="lotacoes" class="table table-striped table-hover"
            data-prototype="{{ form_widget(form.vars.prototype)|e('html_attr') }}" 
            data-target="tbody"
            data-btn-add="#btn-add-lotacao"
            data-btn-remove=".btn-remove">
        <thead>
            <tr>
                <th>{% trans %}Unidade{% endtrans %}</th>
                <th>{% trans %}Cargo{% endtrans %}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for child in form %}
                {{ form_widget(child) }}
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                </td>
                <td>
                    <button type="button" id="btn-add-lotacao" class="btn btn-default">
                        <span class="glyphicon glyphicon-plus"></span>&nbsp;
                        {% trans %}Adicionar{% endtrans %}
                    </button>
                </td>
            </tr>
        </tfoot>
    </table>
{% endblock %}