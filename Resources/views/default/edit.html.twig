{% extends "::base.html.twig" %}

{% form_theme form _self %}

{% block body %}
    <h1>
        <i class="fa fa-users" aria-hidden="true"></i>
        {% trans %}Usuários{% endtrans %}
        <small>
            {% trans %}Gerencie os usuários da unidade atual{% endtrans %}
        </small>
    </h1>
        
    {{ form_start(form) }}

        {% include 'MangatiBaseBundle:Crud:flashMessages.html.twig' %}

        <div class="row">
            <div class="col-md-5">
                <fieldset>
                    <legend>{% trans %}Geral{% endtrans %}</legend>

                    <p class="info">{% trans %}Dados básico do usuário.{% endtrans %}</p>

                    {{ form_row(form.login) }}

                    <div class="row">
                        <div class="col-sm-4">
                            {{ form_row(form.nome) }}
                        </div>
                        <div class="col-sm-8">
                            {{ form_row(form.sobrenome) }}
                        </div>
                    </div>

                    {{ form_row(form.email) }}

                    {% if entity.id %}
                        <div class="row">
                            <div class="col-xs-6">
                                {{ form_row(form.status) }}
                            </div>
                            <div class="col-xs-6 text-right">
                                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#dialog-senha">
                                    <i class="fa fa-lock"></i>
                                    {% trans %}Alterar senha{% endtrans %}
                                </button>
                            </div>
                        </div>
                    {% endif %}

                    {% if not entity.id %}
                        {{ form_row(form.senha) }}

                        {{ form_row(form.confirmacaoSenha) }}
                    {% endif %}
                </fieldset>
            </div>
            <div class="col-md-7">
                <fieldset>
                    <legend>{% trans %}Lotações{% endtrans %}</legend>

                    <p class="info">{% trans %}Lotação é utilizada para definir o perfil de acesso do usuário nas unidades.{% endtrans %}</p>

                    {{ form_row(form.lotacoes, { label: false }) }}

                </fieldset>
            </div>
        </div>

        <div class="buttons">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-save"></span> 
                {% trans %}Salvar{% endtrans %}
            </button>
            <a href="{{ path('novosga_users_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-chevron-left"></span> 
                {% trans %}Voltar{% endtrans %}
            </a>
        </div>

    {{ form_end(form) }}

    
    {# permissoes #}
    <div id="dialog-perfil" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{% trans %}Perfil{% endtrans %}</h4>
                </div>
                <div class="modal-body" v-if="perfil">
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                {% trans %}Nome{% endtrans %}
                            </th>
                            <td>
                                {% verbatim %}
                                    {{perfil.nome}}
                                {% endverbatim %}
                            </td>
                        </tr>
                        <tr>
                            <th>
                                {% trans %}Descrição{% endtrans %}
                            </th>
                            <td>
                                {% verbatim %}
                                    {{perfil.descricao}}
                                {% endverbatim %}
                            </td>
                        </tr>
                        <tr>
                            <th>
                                {% trans %}Permissões{% endtrans %}
                            </th>
                            <td>
                                {% verbatim %}
                                    <ul>
                                        <li v-for="modulo in perfil.modulos">
                                            {{modulo}}
                                        </li>
                                    </ul>
                                {% endverbatim %}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {# dialog mudar senha apenas para usuarios ja cadastrados #}
    {% if entity.id > 0 %}
        <div id="dialog-senha" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form>
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">{% trans %}Alterar senha{% endtrans %}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="senha_senha">{% trans %}Nova Senha{% endtrans %}</label>
                                <input id="senha_senha" type="password" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="senha_confirmacao">{% trans %}Confirmar senha{% endtrans %}</label>
                                <input id="senha_confirmacao" type="password" class="form-control" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">
                                {% trans %}Alterar{% endtrans %}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var unidades = [ {% for unidade in unidades %}{{ unidade.id }},{% endfor %} ];
    </script>
    <script src="{{ asset('bundles/mangatibase/js/symfony-collection.js') }}"></script>
    <script src="{{ asset('bundles/novosgausers/js/script.js') }}"></script>
{% endblock %}

{% block _usuario_lotacoes_widget %}
    <table id="lotacoes" class="table table-striped table-hover"
            data-prototype="{{ form_widget(form.vars.prototype)|e('html_attr') }}" 
            data-target="tbody"
            data-btn-add="#btn-add-lotacao"
            data-btn-remove=".btn-remove">
        <thead>
            <tr>
                <th>{% trans %}Unidade{% endtrans %}</th>
                <th>{% trans %}Perfil{% endtrans %}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for child in form %}
                {{ form_widget(child) }}
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                </td>
                <td class="text-right">
                    <button type="button" id="btn-add-lotacao" class="btn btn-default">
                        <span class="glyphicon glyphicon-plus"></span>&nbsp;
                        {% trans %}Adicionar{% endtrans %}
                    </button>
                </td>
            </tr>
        </tfoot>
    </table>
{% endblock %}

{% block _usuario_lotacoes_entry_widget %}
    <tr>
        <td>
            {% if not form.unidade.vars.errors|length and form.vars.data %}
                {{ form.vars.data.unidade }}
                <input type="hidden" name="{{ form.unidade.vars.full_name }}" value="{{ form.unidade.vars.data.id }}" class="unidade">
            {% else %}
                {{ form_row(form.unidade, { label: false, attr: { class: 'unidade' } }) }}
            {% endif %}
        </td>
        <td>
            {% if not form.perfil.vars.errors|length and form.vars.data %}
                {{ form.vars.data.perfil }}
                <input type="hidden" name="{{ form.perfil.vars.full_name }}" value="{{ form.perfil.vars.data.id }}" class="perfil">
            {% else %}
                {{ form_row(form.perfil, { label: false, attr: { class: 'perfil' } }) }}
            {% endif %}
        </td>
        <td class="text-right text-nowrap">
            <button type="button" title="{% trans %}Visualizar permissões{% endtrans %}" class="btn btn-default btn-view-perfil">
                <i class="fa fa-eye"></i>
            </button>
                
            <button type="button" title="{% trans %}Remover{% endtrans %}" class="btn btn-danger btn-remove">
                <i class="fa fa-remove"></i>
            </button>
        </td>
    </tr>
{% endblock %}